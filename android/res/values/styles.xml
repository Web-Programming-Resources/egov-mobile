<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/org.egov.android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/fontSizeMedium</item>
    </style>

    <style name="TextView" parent="AppTheme">
        <item name="fontName">@string/appFont</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Header" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Body" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Header.Text" parent="TextView">
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#606060</item>
    </style>

    <style name="SettingMenuItem" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/setting_line</item>
    </style>

    <style name="ButtonStyle" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:capitalize">characters</item> -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="MainContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="SlidingDrawerLayout" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="slideDirection">left</item>
        <item name="contentLayoutId">@layout/sliding_menu</item>
        <item name="drawerSize">200dp</item>
    </style>

    <style name="FormRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/viewMargin</item>
        <item name="android:paddingBottom">@dimen/viewMargin</item>
        <item name="android:background">@drawable/edittext_bottom_border</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="FormRow.EditText" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/typehint</item>
    </style>

    <style name="FormRow.Status" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormRow.AutoCompleteTextView" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!--  library usage -->
    <style name="DialogTheme">
       <item name="android:windowBackground">@android:color/transparent</item>
       <item name="android:windowContentOverlay">@null</item>
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowIsFloating">true</item>
       <item name="android:backgroundDimEnabled">false</item>
   </style>

</resources>