<?xml version="1.0" encoding="utf-8"?>
<com.egov.android.library.view.component.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        style="@style/MainContainer"
        android:background="@android:color/white" >

        <com.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|add_complaint|setting"
            app:title="Complaint List" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <com.egov.android.view.component.EGovTextView
                android:id="@+id/errorMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text"
                android:visibility="gone" />

            <com.egov.android.view.component.SearchListView
                android:id="@+id/list_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeHint="Search Text" >
            </com.egov.android.view.component.SearchListView>
        </RelativeLayout>
    </LinearLayout>

</com.egov.android.library.view.component.slider.SlidingDrawerLayout>