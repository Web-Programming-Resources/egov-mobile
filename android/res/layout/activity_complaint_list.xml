<?xml version="1.0" encoding="utf-8"?>
<org.egov.android.library.view.component.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        style="@style/MainContainer"
        android:background="@android:color/white" >

        <org.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|add_complaint|setting"
            app:title="All Complaints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FC9228" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu_hover"
                android:onClick="_loadView" >

                <org.egov.android.view.component.EGovTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Complaints"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_complaint"
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#F4B16E"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu_hover"
                android:onClick="_loadView" >

                <org.egov.android.view.component.EGovTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Me"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_me"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#F4B16E"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <fragment
            android:id="@+id/add_fragment"
            android:name="android.app.ListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</org.egov.android.library.view.component.slider.SlidingDrawerLayout>