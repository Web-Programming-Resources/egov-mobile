<org.egov.android.view.component.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <org.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting"
            app:title="User Profile" />

        <org.egov.android.view.component.Body
            style="@style/Body"
            android:layout_margin="@dimen/viewMargin" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ededed"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <ImageView
                                android:id="@+id/edit_icon"
                                style="@style/ButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edit" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Phone"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Alternate Number"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/alt_contact_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Date of Birth"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/dob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="PAN Card Number"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/pan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Aadhaar Card Number"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/aadhaar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/viewMargin" >

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="115dp"
                                    android:layout_height="wrap_content"
                                    android:text="Preferred Language"
                                    android:textColor="@color/dark_gray" />

                                <org.egov.android.view.component.EGovTextView
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textColor="@color/text" />

                                <org.egov.android.view.component.EGovTextView
                                    android:id="@+id/pref_lang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/text" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </org.egov.android.view.component.Body>
    </LinearLayout>

</org.egov.android.view.component.slider.SlidingDrawerLayout>