<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <com.egov.android.view.component.Header
        style="@style/Header"
        android:layout_width="match_parent"
        app:actionButton="nav_back"
        app:title="Register" />

    <com.egov.android.view.component.Body
        style="@style/Body"
        android:padding="@dimen/viewMargin" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/viewMargin"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp" >

                <LinearLayout style="@style/FormRow" >

                    <com.egov.android.view.component.EGovEditText
                        android:id="@+id/register_name"
                        style="@style/FormRow.EditText"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/register_name_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout style="@style/FormRow" >

                    <com.egov.android.view.component.EGovEditText
                        android:id="@+id/register_phone"
                        style="@style/FormRow.EditText"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/register_phone_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout style="@style/FormRow" >

                    <com.egov.android.view.component.EGovEditText
                        android:id="@+id/register_email"
                        style="@style/FormRow.EditText" />

                    <ImageView
                        android:id="@+id/register_email_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout style="@style/FormRow" >

                    <com.egov.android.view.component.EGovEditText
                        android:id="@+id/register_password"
                        style="@style/FormRow.EditText"
                        android:inputType="textPassword"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/register_password_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout style="@style/FormRow" >

                    <com.egov.android.view.component.EGovEditText
                        android:id="@+id/register_confirm_password"
                        style="@style/FormRow.EditText"
                        android:inputType="textPassword"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/register_cfrm_password_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <com.egov.android.view.component.EGovButton
                    android:id="@+id/register_doRegister"
                    style="@style/ButtonStyle"
                    android:layout_marginTop="20dp"
                    android:text="Register" />
            </LinearLayout>
        </ScrollView>
    </com.egov.android.view.component.Body>

</LinearLayout>