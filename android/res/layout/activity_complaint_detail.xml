<?xml version="1.0" encoding="utf-8"?>
<org.egov.android.library.view.component.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <org.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting|add_complaint|search"
            app:title="Complaint Details" />

        <org.egov.android.view.component.Body
            style="@style/Body"
            android:layout_margin="@dimen/viewMargin" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="@dimen/viewMargin" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:orientation="horizontal" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovTextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chennai"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:orientation="horizontal" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovTextView
                            android:id="@+id/complaintType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="illegal drg connection"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:orientation="horizontal" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovTextView
                            android:id="@+id/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="drainage problem in our street"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:orientation="horizontal" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Landmark"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovTextView
                            android:id="@+id/landmarkDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Floor,769,\nAnna salai,\nChennai, Tamilnadu"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:orientation="horizontal" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovTextView
                            android:id="@+id/complaintStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forwarded"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovButton
                            android:id="@+id/status_summary"
                            style="@style/ButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Status Summary" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:id="@+id/complaint_image_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ededed"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Actions"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/viewMargin" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Change Status"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textColor="@color/text" />

                        <Spinner
                            android:id="@+id/status_spinner"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/viewMargin" >

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Message"
                            android:textColor="@color/dark_gray" />

                        <org.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textColor="@color/text" />

                        <org.egov.android.view.component.EGovEditText
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/edittext_border"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <org.egov.android.view.component.EGovButton
                        android:id="@+id/complaint_changeStatus"
                        style="@style/ButtonStyle"
                        android:layout_marginTop="20dp"
                        android:text="Save" />
                </LinearLayout>
            </ScrollView>
        </org.egov.android.view.component.Body>
    </LinearLayout>

</org.egov.android.library.view.component.slider.SlidingDrawerLayout>