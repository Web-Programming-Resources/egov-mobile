<?xml version="1.0" encoding="utf-8"?>
<com.egov.android.view.activity.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <com.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting"
            app:title="Complaint Detail" />

        <com.egov.android.view.component.Body
            style="@style/Body"
            android:padding="@dimen/viewMargin" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewMargin"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chennai"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="986541237890"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sample@gmail.com"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="illegal drg connection"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="drainage problem in our street"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Landmark"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Floor,769,\nAnna salai,\nChennai, Tamilnadu"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/text" />

                        <com.egov.android.view.component.EGovTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textColor="@color/text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/profile" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.egov.android.view.component.Body>
    </LinearLayout>

</com.egov.android.view.activity.slider.SlidingDrawerLayout>