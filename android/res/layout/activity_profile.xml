<?xml version="1.0" encoding="utf-8"?>
<com.egov.android.view.activity.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <com.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting"
            app:title="User Profile" />

        <com.egov.android.view.component.Body
            style="@style/Body"
            android:padding="@dimen/viewMargin" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ededed"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <ImageView
                            android:id="@+id/edit_icon"
                            style="@style/ButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/viewMargin"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="15dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Mobile"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9855684125"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="john@gmail.com"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Alternate Contact Number"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/alt_contact_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9855684125"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12-05-1985"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:text="Preferred Language"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/text" />

                            <com.egov.android.view.component.EGovTextView
                                android:id="@+id/pref_lang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textColor="@color/text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.egov.android.view.component.Body>
    </LinearLayout>

</com.egov.android.view.activity.slider.SlidingDrawerLayout>