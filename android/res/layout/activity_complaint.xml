<?xml version="1.0" encoding="utf-8"?>
<com.egov.android.view.activity.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <com.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting"
            app:title="Complaint" />

        <com.egov.android.view.component.Body
            style="@style/Body"
            android:padding="@dimen/viewMargin" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewMargin"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout style="@style/FormRow" >

                            <com.egov.android.view.component.EGovEditText
                                android:id="@+id/complaint_location"
                                style="@style/FormRow.EditText"
                                android:hint="Location" />

                            <ImageView
                                android:id="@+id/location"
                                android:layout_width="20dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/location" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_phone"
                            style="@style/FormRow.EditText"
                            android:hint="Phone Number" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_email"
                            style="@style/FormRow.EditText"
                            android:hint="Email" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/complaint_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:listitem="@android:layout/simple_spinner_item" />

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_details"
                            style="@style/FormRow.EditText"
                            android:hint="Detail" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_landmark"
                            style="@style/FormRow.EditText"
                            android:hint="Landmark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/profile" />

                        <ImageView
                            android:id="@+id/changepicture"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/icon_add"
                            android:text="" />
                    </LinearLayout>

                    <com.egov.android.view.component.EGovButton
                        android:id="@+id/complaint_doComplaint"
                        style="@style/ButtonStyle"
                        android:layout_marginTop="20dp"
                        android:text="Submit" />
                </LinearLayout>
            </ScrollView>
        </com.egov.android.view.component.Body>
    </LinearLayout>

</com.egov.android.view.activity.slider.SlidingDrawerLayout>