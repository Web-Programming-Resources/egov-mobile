<?xml version="1.0" encoding="utf-8"?>
<com.egov.android.view.activity.slider.SlidingDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.egov.android"
    style="@style/SlidingDrawerLayout"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout style="@style/MainContainer" >

        <com.egov.android.view.component.Header
            style="@style/Header"
            android:layout_width="match_parent"
            app:actionButton="nav_back|setting"
            app:title="Create Complaint" />

        <com.egov.android.view.component.Body
            style="@style/Body"
            android:padding="@dimen/viewMargin" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewMargin"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout style="@style/FormRow" >

                            <com.egov.android.view.component.EGovEditText
                                android:id="@+id/complaint_location"
                                style="@style/FormRow.EditText"
                                android:hint="Location" />

                            <ImageView
                                android:id="@+id/complaint_location_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/location" />

                            <ImageView
                                android:id="@+id/complaint_location_status"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_phone"
                            style="@style/FormRow.EditText"
                            android:hint="Phone Number" />

                        <ImageView
                            android:id="@+id/complaint_phone_status"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_email"
                            style="@style/FormRow.EditText"
                            android:hint="Email" />

                        <ImageView
                            android:id="@+id/complaint_email_status"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <AutoCompleteTextView
                            android:id="@+id/complaint_type"
                            style="@style/FormRow.EditText"
                            android:ems="10"
                            android:hint="Complaint Type" >
                        </AutoCompleteTextView>

                        <ImageView
                            android:id="@+id/complaint_type_status"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_details"
                            style="@style/FormRow.EditText"
                            android:hint="Detail" />

                        <ImageView
                            android:id="@+id/complaint_details_status"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout style="@style/FormRow" >

                        <com.egov.android.view.component.EGovEditText
                            android:id="@+id/complaint_landmark"
                            style="@style/FormRow.EditText"
                            android:hint="Landmark" />

                        <ImageView
                            android:id="@+id/complaint_landmark_status"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/file_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/innerLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:background="@drawable/edittext_border" >

                                <ImageView
                                    android:id="@+id/add_photo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="34dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/add_photo_icon" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <com.egov.android.view.component.EGovButton
                        android:id="@+id/complaint_doComplaint"
                        style="@style/ButtonStyle"
                        android:layout_marginTop="20dp"
                        android:text="Submit" />
                </LinearLayout>
            </ScrollView>
        </com.egov.android.view.component.Body>
    </LinearLayout>

</com.egov.android.view.activity.slider.SlidingDrawerLayout>