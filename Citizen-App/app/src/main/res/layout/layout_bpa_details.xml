<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvApplicationDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    android:visibility="gone"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/application_no"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/tvApplicationNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dataLabelColor"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/data_labelSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="APPLICATION TYPE"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvApplicationType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dataLabelColor"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="APPLICATION STATUS"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvApplicationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/dataLabelColor"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/owner_label"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dataLabelColor"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/data_labelSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="OWNER MOBILE NO"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvOwnerMobNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dataLabelColor"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="OWNER EMAIL ID"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvOwnerEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/dataLabelColor"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="OWNER ADDRESS"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/tvOwnerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dataLabelColor"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/data_labelSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="SITE ADDRESS"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/tvSiteAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dataLabelColor"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/data_labelSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="NATURE OF SITE"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvNatureOfSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dataLabelColor"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="PERMISSION TYPE"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvPermissionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/dataLabelColor"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="NAME OF APPLICANT"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/tvApplicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dataLabelColor"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/data_labelSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="APPLICANT MOBILE NO"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvApplicantMobNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dataLabelColor"
                        android:gravity="left"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="APPLICANT EMAIL ID"
                        android:textSize="@dimen/field_labelSize" />

                    <TextView
                        android:id="@+id/tvApplicantEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/dataLabelColor"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/data_labelSize" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Documents"
                android:id="@+id/textView7" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerViewFiles"
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        </LinearLayout>

</android.support.v7.widget.CardView>