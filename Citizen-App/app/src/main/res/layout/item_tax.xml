<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">



    <LinearLayout
        android:id="@+id/layoutInstallmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/installment"
            android:textSize="@dimen/field_labelSize" />


        <TextView
            android:id="@+id/propertytax_installment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dataLabelColor"
            android:textSize="22sp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBreakupDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/demand"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/propertytax_taxamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/dataLabelColor"
                android:textSize="@dimen/data_labelSize" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="+"
            android:textSize="@dimen/field_labelSize" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/penalty"
                android:textSize="@dimen/field_labelSize" />


            <TextView
                android:id="@+id/propertytax_penalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/dataLabelColor"
                android:textSize="@dimen/data_labelSize" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="="
            android:textSize="@dimen/field_labelSize" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/balance"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:id="@+id/propertytax_total"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/dataLabelColor" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/collection"
                android:textSize="@dimen/field_labelSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="-"
                android:textColor="@color/dataLabelColor"
                android:textSize="@dimen/data_labelSize" />

        </LinearLayout>





    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/propertytax_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dataLabelColor"
        android:textSize="@dimen/data_labelSize" />

    <TextView
        android:id="@+id/propertytax_chequepenalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dataLabelColor"
        android:textSize="@dimen/data_labelSize" />-->


    <LinearLayout
        android:id="@+id/layoutTotalFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/total"
            android:textSize="@dimen/field_labelSize" />

        <TextView
            android:id="@+id/tvTotal"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/dataLabelColor" />

    </LinearLayout>

</LinearLayout>