<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/property_searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <org.egovernments.egoverp.helper.CustomEditText
                android:id="@+id/property_searchTextbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/middle_edittext"
                android:drawableEnd="@drawable/ic_done_black_24dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_done_black_24dp"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:hint="@string/propertytax_search_hint"
                android:imeOptions="actionDone"
                android:inputType="textImeMultiLine"
                android:minHeight="40dp"
                android:paddingBottom="5dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:textColor="#000"
                android:textColorHint="#a8a5a5"
                android:textCursorDrawable="@null"
                android:layout_marginRight="16dp"
                android:textSize="15sp" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollviewpropertytax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <include layout="@layout/header_propertytax_list"/>

        </ScrollView>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/propertytax_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabpaypropertytax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_rupee_24dp"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    </FrameLayout>

</LinearLayout>
